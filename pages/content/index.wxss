/**index.wxss**/
@import "/wxSearch/wxSearch.wxss";
.type-container{
  width: 100%;
  height: 170rpx;
  background-color: #fff;
  overflow: hidden;
}
.type-navbar{
  white-space: nowrap;
  height:170rpx;
  width: 100%;
  background-color: #fff;
}
.type-box{
  padding-top: 15rpx;
  width:124rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
  box-sizing: content-box;
}
.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
.type-item-on{
  border-bottom: 4rpx solid #e64340;
}
.type-icon{
  
 width: 100rpx;
 height: 100rpx;
 border-radius: 20rpx;
}
.type-text{
 display: block;
 color: #333;
 font-size: 25rpx;
 line-height: 50rpx;
}

.cms-container{
  width: 100%;
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
}
.cms-box{
  width: 100%;
  height: 450rpx;
  background-color: #fff;
  margin-bottom: 24rpx;
}
.cms-pic{
  padding-left: 20px;
  padding-right: 25px
}
.img{
  width: 100%;
  height: 340rpx
}
.cms-title{
  height: 50rpx;
  font-size: 30rpx;
  padding-left: 25px;
  padding-right: 25px;
  padding-top: 10px;
}
.cms-views{
  font-size: 25rpx;
  padding-top: 6rpx;
  padding-left: 520rpx;
}